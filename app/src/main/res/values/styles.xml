<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="base_activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/dark</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <!-- Estilo Base para elementos horizontais -->
    <style name="default_horizontal_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="default_title" parent="default_horizontal_container">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/timer_font_title</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style
        name="button_primary"
        parent="Widget.MaterialComponents.Button"
        >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style
        name="input_text"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/element_gap</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style
        name="input_dropdown"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        >
        <item name="android:layout_marginBottom">@dimen/element_gap</item>
        <item name="boxBackgroundColor">@color/primary</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="endIconTint">@color/accent</item>
        <item name="boxStrokeColor">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
    </style>

    <style name="timer_container">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="timer_item">
        <item name="fontWeight">600</item>
        <item name="android:textSize">80dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style
        name="timer_divider"
        parent="@style/timer_item"
        >
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="timer_logo_break">
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="additional_info_container">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:padding">@dimen/default_padding</item>
    </style>

    <style name="timer_additional_info_name">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">@dimen/timer_font_name</item>
    </style>

    <style name="timer_additional_info_message">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/timer_font_message</item>
    </style>

    <style name="about_section" parent="default_horizontal_container">
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="about_developer_cards_container" parent="default_horizontal_container">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="about_developer_card" parent="default_horizontal_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="about_developer_card_title" parent="default_horizontal_container">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/timer_font_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="about_developer_card_register" parent="about_developer_card_title">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="about_dev_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
    </style>

    <style name="about_text" parent="timer_additional_info_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <dimen name="timer_font_title">20dp</dimen>
</resources>