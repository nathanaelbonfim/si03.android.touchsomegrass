<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.touchsomegrass">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TouchSomeGrass">
        <activity
            android:name=".BreakActivity"
            android:exported="false"
            android:label="@string/title_activity_break"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar" />
        <activity
            android:name=".TimerActivity"
            android:exported="false"
            android:label="@string/title_activity_timer"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar" />
        <activity
            android:name=".ConfigurationActivity"
            android:exported="false"
            android:label="@string/title_activity_configuration"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar" />
        <activity
            android:name=".PresentationActivity"
            android:exported="true"
            android:label="@string/title_activity_presentation"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.TouchSomeGrass.NoActionBar" />
    </application>

</manifest>